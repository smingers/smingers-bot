# Metaculus AI Forecasting Bot - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED
# =============================================================================

# Metaculus API token - get this from https://www.metaculus.com/aib/
METACULUS_TOKEN=

# At least one LLM provider is required
# OpenRouter (recommended for starting - free credits available via Metaculus)
OPENROUTER_API_KEY=

# =============================================================================
# RECOMMENDED (for competitive performance)
# =============================================================================

# Anthropic API key - for Claude models
ANTHROPIC_API_KEY=

# OpenAI API key - for GPT-4, o3, o4-mini
OPENAI_API_KEY=

# =============================================================================
# RESEARCH SOURCES (optional but improve forecast quality)
# =============================================================================

# Perplexity API - search + reasoning
PERPLEXITY_API_KEY=

# AskNews API - news research
ASKNEWS_CLIENT_ID=
ASKNEWS_CLIENT_SECRET=

# Google Search API (via Serper)
SERPER_API_KEY=

# Exa API - semantic search
EXA_API_KEY=

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Override default config file location
# CONFIG_PATH=./config.yaml

# Enable debug logging
# DEBUG=true
